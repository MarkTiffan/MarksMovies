@page
@model MarksMovies.Pages.Movies.ExportModel
@{
    ViewData["Title"] = "Export";
}

<h1>Export</h1>

<div>
    <a href="@(Url.Content("~/Movies/Index"))">Back to List</a>
</div>

<div>
    <form method="post">
        <div class="container-fluid">
            <div class="form-group row">
                <div class="row">
                    <div class="col-md-auto">
                        <label asp-for="FileTypeSelection" class="control-label"></label>
                        <select asp-for="FileTypeSelection" asp-items="@Html.GetEnumSelectList<ExportModel.ExportFileType>()" class="form-control"></select>
                        <span asp-validation-for="FileTypeSelection" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <div class="row">
                    <div class="col-md-auto">
                        <label asp-for="FileName" class="control-label"></label>
                    </div>
                    <div class="col-auto"> </div>
                </div>
                <div class="row">
                    <div class="col-md-auto">
                        <input asp-for="FileName" type="text" class="form-control" />
                        <span asp-validation-for="FileName" class="text-danger"></span>
                    </div>
                    <div class="col-auto">
                        <button asp-page-handler="Download" class="btn btn-primary">Download</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>